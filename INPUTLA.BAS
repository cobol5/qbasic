DECLARE SUB ARAMA ()
DECLARE SUB KAYIT ()
BASLA:
COLOR 0, 7
CLS
COLOR 14, 1
LOCATE 5, 33, 0: PRINT "1--->KAYIT"
LOCATE 8, 33: PRINT "2--->ARAMA"
LOCATE 11, 33: PRINT "3--->LISTE"
LOCATE 14, 33: PRINT "4--->SILME"
LOCATE 17, 33: PRINT "5--->CIKIS"
LOCATE 22, 30: PRINT "SECIMINIZ <1,2,3,4,5>"
LOCATE 22, 52: INPUT "", SEC
IF SEC = 1 THEN CALL KAYIT: GOTO BASLA
IF SEC = 2 THEN CALL ARAMA: GOTO BASLA

SUB ARAMA
OPEN "RANDOM.111" FOR RANDOM AS #1 LEN = 54
FIELD #1, 1 AS F$, 10 AS AD$, 10 AS SOY$, 13 AS TEL$, 20 AS ADR$
COLOR 0, 7: CLS
LOCATE 10, 10: INPUT "ARANILAN KAYIT NUMARASINI GIRINIZ...", AKNO%
KNO% = LOF(1) / 54
KNO% = KNO% + 1
TE: GET #1, KNO%
LOCATE 10, 10: PRINT "ADI   =", ADI$
LOCATE 12, 10: PRINT "SOYADI=", SOYAD$
LOCATE 14, 10: PRINT "TELEFON=", TELEF$
LOCATE 16, 10: PRINT "ADRESI=", ADRES$
I$ = INPUT$(1)
END SUB

SUB KAYIT
COLOR 0, 7: CLS
OPEN "RANDOM.111" FOR RANDOM AS #1 LEN = 54
FIELD #1, 1 AS F$, 10 AS AD$, 10 AS SOY$, 13 AS TEL$, 20 AS ADR$
1
LOCATE 10, 10: INPUT "KAYIT NO   =", KNO%
COLOR 0, 7: CLS
IF KNO% = 0 THEN GOTO 1
IF F$ = "*" THEN LOCATE 22, 10: PRINT "BU KAYIT GIRILMIS...": I$ = INPUT$(1): GOTO 1
LOCATE 10, 10: INPUT "ADI.....=", ADI$
LOCATE 12, 10: INPUT "SOYADI..=", SOYAD$
LOCATE 14, 10: INPUT "TELEFONU=", TELEF$
LOCATE 16, 10: INPUT "ADRESI..=", ADRES$

LSET F$ = "*"
LSET AD$ = ADI$: LSET SOY$ = SOYAD$: LSET TEL$ = TELEF$: LSET ADR$ = ADRES$

PUT #1, KNO%

LOCATE 22, 10: INPUT "DEVAM ETMEK ISTIYORMUSUNUZ...<E/H>", DEV$
IF DEV$ = "E" OR DEV$ = "e" THEN GOTO 1
CLOSE #1
END SUB

